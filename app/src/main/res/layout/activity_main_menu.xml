<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuActivity">

    <TextView
        android:id="@+id/board_rows_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="48dp"
        android:text="Number of rows"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/board_rows_edittext"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/board_rows_textview"
        app:layout_constraintStart_toEndOf="@+id/board_rows_textview"
        app:layout_constraintTop_toTopOf="@+id/board_rows_textview" />

    <TextView
        android:id="@+id/board_columns_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="48dp"
        android:text="Number of columns"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/board_rows_textview" />

    <EditText
        android:id="@+id/board_columns_edittext"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/board_columns_textview"
        app:layout_constraintStart_toEndOf="@+id/board_columns_textview"
        app:layout_constraintTop_toTopOf="@+id/board_columns_textview" />

    <TextView
        android:id="@+id/num_players_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="48dp"
        android:text="Number of players"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/board_columns_textview" />

    <EditText
        android:id="@+id/num_players_editview"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/num_players_textview"
        app:layout_constraintStart_toEndOf="@+id/num_players_textview"
        app:layout_constraintTop_toTopOf="@+id/num_players_textview" />

    <LinearLayout
        android:id="@+id/player_types_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="48dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/num_players_editview">

        <Spinner
            android:id="@+id/player1_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Spinner>

        <Spinner
            android:id="@+id/player2_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Spinner>

    </LinearLayout>

    <TextView
        android:id="@+id/num_ladders_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="48dp"
        android:text="Number of ladders"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/player_types_layout" />

    <EditText
        android:id="@+id/num_ladders_editview"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/num_ladders_textview"
        app:layout_constraintStart_toEndOf="@+id/num_ladders_textview"
        app:layout_constraintTop_toTopOf="@+id/num_ladders_textview" />

    <TextView
        android:id="@+id/num_snakes_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="48dp"
        android:text="Number of snakes"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/num_ladders_textview" />

    <EditText
        android:id="@+id/num_snakes_editview"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/num_snakes_textview"
        app:layout_constraintStart_toEndOf="@+id/num_snakes_textview"
        app:layout_constraintTop_toTopOf="@+id/num_snakes_textview" />

    <TextView
        android:id="@+id/num_apples_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="48dp"
        android:text="Number of apples"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/num_snakes_textview" />

    <EditText
        android:id="@+id/num_apples_editview"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/num_apples_textview"
        app:layout_constraintStart_toEndOf="@+id/num_apples_textview"
        app:layout_constraintTop_toTopOf="@+id/num_apples_textview" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:onClick="startGame"
        android:text="start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/num_apples_textview" />

</android.support.constraint.ConstraintLayout>